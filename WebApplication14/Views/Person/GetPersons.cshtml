@model IEnumerable<WebApplication14.ViewModels.PersonsListViewModel>

@{
    ViewData["Title"] = "Persons List";
    int row = 1;
}

<div class="row">
    <div class="col-12">
        <table class="table table-responsive table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var person in Model)
                    {
                        <tr>
                            <td>@row</td>
                            <td>@person.FirstName</td>
                            <td>@person.LastName</td>
                            <td>
                                <a asp-controller="Person" asp-action="PersonInfo" asp-route-personId="@person.Id" class="btn btn-sm btn-info">
                                    Person Info
                                </a>
                            </td>
                        </tr>

                        row++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>