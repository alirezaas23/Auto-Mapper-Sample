@model WebApplication14.ViewModels.PersonInfoViewModel

@{
    ViewData["Title"] = $"Person Info Number {Model.Id}";
}

<div class="row">
    <div class="col-12 col-md-6">
        <div class="card">
            <div class="card-header">
                @ViewData["Title"]
            </div>
            <div class="card-body">
                <h3>
                    @Model.FirstName
                </h3>
                <hr />
                <p class="small">
                    <strong>First Name :</strong>
                    <span>@Model.FirstName</span>
                </p>
                <p class="small">
                    <strong>Last Name :</strong>
                    <span>@Model.LastName</span>
                </p>
                <p class="small">
                    <strong>Phone Number :</strong>
                    <span>@Model.PhoneNumber</span>
                </p>
            </div>
        </div>
    </div>
</div>